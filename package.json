{
  "name": "sync-engine",
  "version": "0.1.0",
  "description": "A minimal, framework-agnostic sync engine for offline-first applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "type-check:tests": "tsc --noEmit --project tsconfig.vitest.json",
    "lint": "eslint src/**/*.ts tests/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "quality": "pnpm lint && pnpm format:check && pnpm type-check && pnpm type-check:tests && pnpm test",
    "prepare": "lefthook install",
    "example:basic": "tsx examples/basic.ts"
  },
  "keywords": [
    "sync",
    "offline-first",
    "replication",
    "conflict-resolution",
    "framework-agnostic"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@evilmartians/lefthook": "^2.0.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.2"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@9.12.3"
}
